------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Q7 Explorer" | get-tree | select Q7Project | get-menu "New/Super Context" | click
with [get-window "New Super Context Wizard"] {
    get-table | select Folder
    get-editbox -after [get-label "Name:"] | set-text SuperFolderContext
    get-button Finish | click
}
get-tab-folder -index 1 | get-property activePage | equals SuperFolderContext | verify-true
with [get-editor SuperFolderContext] {
    get-button Capture | get-property enablement | equals false | verify-true
    get-button Apply | get-property enablement | equals false | verify-true
    get-section Contexts | get-table | get-property itemCount | equals 0 | verify-true
}
get-editor SuperFolderContext | get-section Contexts | get-button "Add..." | click
with [get-window "Select context"] {
    get-editbox -after [get-label "Enter context name prefix or pattern (*, ?):"] | set-focus
    get-table | select "Folder1 \\(Q7Project\\)"
}
with [get-window "Select context" | get-table] {
    get-property itemCount | equals 2 | verify-true
    get-item "Folder1 \\(Q7Project\\)" | get-property caption | equals "Folder1 (Q7Project)" | verify-true
    get-item "Folder2 \\(Q7Project\\)" | get-property caption | equals "Folder2 (Q7Project)" | verify-true
}
with [get-window "Select context"] {
    get-editbox -after [get-label "Enter context name prefix or pattern (*, ?):"] | set-focus
    get-table | select "Folder1 \\(Q7Project\\)" "Folder2 \\(Q7Project\\)"
    get-button OK | click
}
with [get-editor SuperFolderContext | get-section Contexts | get-table] {
    get-property itemCount | equals 2 | verify-true
    get-item "Folder1 \\(Q7Project\\)" | get-property caption | equals "Folder1 (Q7Project)" | verify-true
    get-item "Folder2 \\(Q7Project\\)" | get-property caption | equals "Folder2 (Q7Project)" | verify-true
}
