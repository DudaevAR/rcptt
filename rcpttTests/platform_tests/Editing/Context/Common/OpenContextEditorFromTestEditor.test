get-view "Test Explorer" | get-tree | select "Q7Project/test with contexts" | double-click
with [get-editor "test with contexts" | get-section Contexts] {
    click
    get-table | select "group \\(Q7Project\\)" | double-click
}
with [get-tab-folder -index 1] {
    get-property pages -index 0 | equals "test with contexts" | verify-true
    get-property pages -index 1 | equals group | verify-true
    get-property activePage | equals group | verify-true
    get-property tabCount | equals 2 | verify-true
}
with [get-editor "test with contexts"] {
    click
    get-section Contexts | get-table | select "contextWB \\(Q7Project\\)" | double-click
}
with [get-tab-folder -index 1] {
    get-property pages -index 0 | equals "test with contexts" | verify-true
    get-property pages -index 1 | equals group | verify-true
    get-property pages -index 2 | equals contextWB | verify-true
    get-property activePage | equals contextWB | verify-true
    get-property tabCount | equals 3 | verify-true
}
with [get-editor "test with contexts"] {
    click
    get-section Contexts | get-table | select "ecl-script \\(Q7Project\\)" | double-click
}
with [get-tab-folder -index 1] {
    get-property pages -index 0 | equals "test with contexts" | verify-true
    get-property pages -index 1 | equals group | verify-true
    get-property pages -index 2 | equals contextWB | verify-true
    get-property pages -index 3 | equals "ecl-script" | verify-true
    get-property activePage | equals "ecl-script" | verify-true
    get-property tabCount | equals 4 | verify-true
}
with [get-editor "test with contexts"] {
    click
    get-section Contexts | get-table | select "contextWS \\(Q7Project\\)" | double-click
}
with [get-tab-folder -index 1] {
    get-property pages -index 0 | equals "test with contexts" | verify-true
    get-property pages -index 1 | equals group | verify-true
    get-property pages -index 2 | equals contextWB | verify-true
    get-property pages -index 3 | equals "ecl-script" | verify-true
    get-property pages -index 4 | equals contextWS | verify-true
    get-property activePage | equals contextWS | verify-true
    get-property tabCount | equals 5 | verify-true
}
