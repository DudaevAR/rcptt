------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "Q7Project/DebugContext" | double-click
with [get-editor DebugContext | get-editbox -after [get-label "Name:"]] {
    set-text-selection -offset 12 -startLine 0 -endLine 0 -endOffset 0
    get-menu Copy | click
    set-text-offset 12 0
    get-menu Paste | click
}
get-editor DebugContextDebugContext | get-editbox -after [get-label "Name:"] | get-property text 
    | equals DebugContextDebugContext | verify-true
