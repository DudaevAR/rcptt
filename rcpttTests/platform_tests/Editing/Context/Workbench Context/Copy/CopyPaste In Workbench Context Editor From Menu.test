------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "Q7Project/WorkbenchContext" | double-click
with [get-editor WorkbenchContext] {
    get-section Description | click
    get-editbox -after [get-label "Name:"] | set-text-selection -offset 16 -startLine 0 -endLine 0 -endOffset 0
}
get-menu "Edit/Copy" | click
get-editor WorkbenchContext | get-editbox -after [get-label "Tags:"] | set-text-offset 4 0
get-menu "Edit/Paste" | click
get-editor WorkbenchContext | get-editbox -after [get-label "Tags:"] | set-text-selection -offset 20 -startLine 0 
    -endLine 0 -endOffset 0
get-menu "Edit/Copy" | click
get-editor WorkbenchContext | get-section Description | get-text-viewer | set-caret-pos 1 12
get-menu "Edit/Paste" | click
with [get-editor WorkbenchContext | get-section Description | get-text-viewer] {
    set-caret-pos 1 31
    select-range 1 32 1 1
}
get-menu "Edit/Copy" | click
get-editor WorkbenchContext | get-section Workbench | get-editbox -after [get-label "Perspective id:"] | click-text 14
get-menu "Edit/Paste" | click
get-editor WorkbenchContext | get-section Workbench | get-editbox -after [get-label "Perspective id:"] | click-text 45 1
with [get-editor WorkbenchContext] {
    get-editbox -after [get-label "Name:"] | get-property text | equals WorkbenchContext | verify-true
    get-editbox -after [get-label "Tags:"] | get-property text | equals TagsWorkbenchContext | verify-true
    get-section Description | get-text-viewer | get-property text | equals DescriptionTagsWorkbenchContext | verify-true
    get-section Workbench | get-editbox -after [get-label "Perspective id:"] | get-property text 
        | equals PerspectiveIDDescriptionTagsWorkbenchContext | verify-true
}
------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac--
