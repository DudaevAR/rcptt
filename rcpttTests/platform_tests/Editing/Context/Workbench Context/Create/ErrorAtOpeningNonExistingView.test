------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "ContextsProject/WB_incorrect" | double-click -nowait
get-editor "WB_incorrect" | get-button Apply | click
wait 1000
with [get-view "Execution View"] {
    get-label "1/1" | get-property caption | equals "1/1" | verify-true
    get-label 1 | get-property caption | equals 1 | verify-true
    with [get-editbox -after [get-label "Message:"]] {
        get-property text 
            | contains "Failed to execute context: WB_incorrect Cause: Could not create view: com.xored.fanide.ui.explorer2" 
            | verify-true
        get-property readOnly | equals true | verify-true
    }
}
