------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "Q7Project/EclContext" | double-click
with [get-editor EclContext | get-editbox -after [get-label "Tags:"]] {
    type-text text
    set-text-selection -offset 4 -startLine 0 -endLine 0 -endOffset 0
    get-menu Copy | click
    set-text-offset 4 0
    get-menu Paste | click
}
get-editor EclContext | get-editbox -after [get-label "Tags:"] | get-property text | equals texttext | verify-true
