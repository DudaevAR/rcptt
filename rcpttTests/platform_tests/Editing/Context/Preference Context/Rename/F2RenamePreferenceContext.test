------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "Q7Project/PreferenceContext" | key-type F2
with [get-window "Rename Resource"] {
    get-editbox -after [get-label "New name:"] | get-property value | equals PreferenceContext | verify-true
    get-editbox -after [get-label "File name:"] | get-property value | equals "PreferenceContext.ctx" | verify-true
}
with [get-window "Rename Resource"] {
    get-editbox -after [get-label "New name:"] | set-text PreferenceContext2
    get-button OK | click
}
get-view "Test Explorer" | get-tree | select "Q7Project/PreferenceContext2" | double-click
get-editor PreferenceContext2 | get-editbox -after [get-label "Name:"] | get-property value | equals PreferenceContext2 
    | verify-true
