------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "Q7Project3/GroupContext4" | double-click -nowait
with [get-editor GroupContext4 | get-section Contexts | get-table] {
    get-item "GroupContext5 \\(Q7Project3\\)" | get-property caption | equals "GroupContext5 (Q7Project3)" | verify-true
    get-item "GroupContext6 \\(Q7Project3\\)" | get-property caption | equals "GroupContext6 (Q7Project3)" | verify-true
}
get-view "Test Explorer" | get-tree | select "Q7Project3/GroupContext5" | get-menu "Rename..." | click
with [get-window "Rename Resource"] {
    get-editbox -after [get-label "New name:"] | set-text C
    get-button OK | click
}
get-editor GroupContext4 | get-section Contexts | get-table | get-item "C \\(Q7Project3\\)" | get-property caption 
    | equals "C (Q7Project3)" | verify-true
get-view "Test Explorer" | get-tree | select "Q7Project3/GroupContext6" | get-menu "Rename..." | click
with [get-window "Rename Resource"] {
    get-editbox -after [get-label "New name:"] | set-text C2
    get-button OK | click
}
with [get-editor GroupContext4 | get-section Contexts | get-table] {
    get-item "C2 \\(Q7Project3\\)" | get-property caption | equals "C2 (Q7Project3)" | verify-true
    get-property itemCount | equals 2 | verify-true
}
get-view "Test Explorer" | get-tree | select "Q7Project3/GroupContext4"
get-editor GroupContext4 | get-button Apply | click
with [get-view "Execution View"] {
    get-tree | get-item "GroupContext4.*" | get-property caption | equals "GroupContext4.*" 
        | verify-true
    get-label 0 | get-property caption | equals 0 | verify-true
}
