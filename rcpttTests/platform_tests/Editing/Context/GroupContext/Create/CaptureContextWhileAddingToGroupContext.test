get-view "Test Explorer" | get-tree | select "cleanSELFAUT/cleanTest" | get-menu "Run As/.* Test Cases" | click
get-view "Test Explorer" | get-tree | select "Q7Project3/GroupContext4" | double-click
get-editor GroupContext4 | get-section Contexts | get-button "Add..." | click
with [get-window "Select context"] {
    get-button "Capture..." | click
    with [get-window "New Context Wizard"] {
        get-table | select Workbench
        get-editbox -after [get-label "Name:"] | set-text wbb
        get-button Finish | click
    }
}
get-editor GroupContext4 | get-section Contexts | get-table | select "wbb \\(Q7Project3\\)" | double-click
get-editor wbb | get-section Views | get-table | get-property itemCount | equals 3 | verify-true
