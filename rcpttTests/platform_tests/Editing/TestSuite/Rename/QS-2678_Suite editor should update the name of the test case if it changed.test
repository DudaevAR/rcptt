get-view "Q7 Explorer" | get-tree | select "MyProject/tc1" | double-click
with [get-editor tc1] {
    get-editbox -after [get-label "Name:"] | set-text-offset 3 0
    with [get-editbox -after [get-label "Name:"]] {
        set-text-offset 3 0
        key-type BackSpace
    }
}
get-editor tc | get-editbox -after [get-label "Name:"] | key-type "NUMPAD_2" 2
get-editor tc2 | get-editbox -after [get-label "Name:"] | key-type "M1+s"
get-view "Q7 Explorer" | get-tree | select "MyProject/ts1" | double-click
get-editor ts1 | get-section "Test Cases" | get-table | get-item "tc2 \\(MyProject\\)" | get-property caption 
    | equals "tc2 (MyProject)" | verify-true
