------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Q7 Explorer" | get-tree | select "MyProject/TestSuite" | key-type Del
get-window "Delete Resources" | get-button OK | click
get-view "Q7 Explorer" | get-tree | verify-error { get-item "MyProject/TestSuite" }
get-view "Q7 Explorer" | get-tree | key-type "M1+z"
get-view "Q7 Explorer" | get-tree | get-item "MyProject/TestSuite" | get-property caption | equals TestSuite | verify-true
get-view "Q7 Explorer" | get-tree | select "MyProject/TestSuite" | double-click
get-editor TestSuite | get-section "Test Cases" | get-table | get-property itemCount | equals 3 | verify-true
get-editor TestSuite | close
with [get-view "Q7 Explorer"] {
    click
    get-tree | key-type "M1+y"
}
verify-error { get-view "Q7 Explorer" | get-tree | select "MyProject/TestSuite" }
