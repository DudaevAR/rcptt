------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Q7 Explorer" | get-tree | select "MyProject/TestSuite" | get-menu "Q7/Add Tag..." | click
with [get-window "Select Tag(s) to Add"] {
    get-editbox | set-text "tag_suite"
    get-button OK | click
}
get-view Tags | click
get-view "Q7 Explorer" | get-tree | select "MyProject/TestSuite" | double-click
get-editor TestSuite | get-editbox -after [get-label "Tags:"] | get-property text | equals "tag_suite" | verify-true
with [get-view Tags | get-tree] {
    get-property itemCount | equals 1 | verify-true
    get-item "tag_suite \\(1\\)" | get-property childCount | equals 1 | verify-true
    get-item "tag_suite \\(1\\)/TestSuite" | get-property caption | equals TestSuite | verify-true
}
get-view "Q7 Explorer" | get-tree | select "MyProject/TestSuite" | get-menu "Q7/Add Tag..." | click
with [get-window "Select Tag(s) to Add"] {
    get-editbox | set-text "new_suite"
    get-button OK | click
}
