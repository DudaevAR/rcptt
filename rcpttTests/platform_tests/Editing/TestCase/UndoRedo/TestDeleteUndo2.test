------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select Q7Project | get-menu "New/Context" | click
with [get-window "New Context Wizard"] {
    get-table | select Group
    get-editbox -after [get-label "Name:"] | set-text group
    get-button Finish | click
}
get-editor group | get-section Contexts | get-button "Add..." | click
get-window "Select context" | get-table | select "context \\(Q7Project\\)" | click -nowait -default
with [get-editor group | get-editbox -after [get-label "Name:"]] {
    key-type "M1+s"
    key-type "M1+w"
}
with [get-view "Test Explorer" | get-tree] {
    type-text w
    select "Q7Project/scenario" | double-click -nowait
}
get-editor scenario | get-section Contexts | get-button "Add..." | click
get-window "Select context" | get-table | select "group \\(Q7Project\\)" | click -nowait -default
with [get-editor scenario | get-editbox -after [get-label "Name:"]] {
    key-type "M1+s"
    key-type "M1+w"
}
with [get-view "Test Explorer" | get-tree] {
    type-text w
    select "Q7Project/group" | double-click -nowait
    key-type "M1+w"
    type-text w
    select "Q7Project/context" "Q7Project/group" "Q7Project/scenario"
    get-menu Delete | click
}
get-window "Delete Resources" | get-button OK | click
get-view "Test Explorer" | get-tree | select Q7Project | key-type "M1+z"
with [get-view "Test Explorer" | get-tree] {
    get-item "Q7Project/context" | get-property caption | equals context | verify-true
    get-item "Q7Project/scenario" | get-property caption | equals scenario | verify-true
    get-item "Q7Project/group" | get-property caption | equals group | verify-true
}
get-view "Test Explorer" | get-tree | key-type "M1+y"
with [get-view "Test Explorer" | get-tree] {
    verify-error { get-item "Q7Project/context" }
    verify-error { get-item "Q7Project/scenario" }
    verify-error { get-item "Q7Project/group" }
}
------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac--
