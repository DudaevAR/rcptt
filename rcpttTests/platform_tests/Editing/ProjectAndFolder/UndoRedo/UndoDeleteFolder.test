------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "p3/folder" | get-menu Delete | click
get-window "Delete Resources" | get-button OK | click
get-view "Test Explorer" | get-tree | key-type "M1+z"
with [get-view "Test Explorer" | get-tree] {
    get-item "p3/folder" | get-property caption | equals folder | verify-true
    get-item "p3/folder" | get-property childCount | equals 2 | verify-true
    get-item "p3/folder/context3" | get-property caption | equals context3 | verify-true
    get-item "p3/folder/scenario3" | get-property caption | equals scenario3 | verify-true
}
get-view "Test Explorer" | get-tree | key-type [get-by-os -win "M1+y" -default "M1+M2+z"]
verify-error {
	get-view "Test Explorer" | get-tree |   get-item "p3/folder"
}
get-view "Test Explorer" | get-tree | select "p2/folder_context" | get-menu Delete | click
get-window "Delete Resources" | get-button OK | click
with [get-view "Test Explorer" | get-tree] {
    key-type "M1+z"
    select "p2/folder_test/scenario2" | double-click
}
get-editor scenario2 | get-section Contexts | click
with [get-view "Test Explorer" | get-tree] {
    get-item "p2/folder_context" | get-property caption | equals "folder_context" | verify-true
    get-item "p2/folder_context" | get-property childCount | equals 1 | verify-true
    get-item "p2/folder_context/context2" | get-property caption | equals context2 | verify-true
}
with [get-editor scenario2 | get-section Contexts | get-table] {
    get-property itemCount | equals 1 | verify-true
    get-item "context2 \\(p2\\)" | get-property caption | equals "context2 (p2)" | verify-true
}
get-view "Test Explorer" | get-tree | key-type [get-by-os -win "M1+y" -default "M1+M2+z"]
verify-error {
	get-view "Test Explorer" | get-tree |   get-item "p2/folder_context"
}
------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac--
