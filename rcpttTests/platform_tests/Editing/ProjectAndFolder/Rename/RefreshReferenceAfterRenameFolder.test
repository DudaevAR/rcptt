get-view "Test Explorer" | get-tree | select "p2/folder_test/scenario2" | double-click
get-editor scenario2 | get-section Contexts | click
get-view "Test Explorer" | get-tree | select "p2/folder_context" | get-menu "Rename..." | click
with [get-window "Rename Resource"] {
    get-editbox -after [get-label "New name:"] | set-text "folder_context_test"
    get-button OK | click
}
with [get-editor scenario2 | get-section Contexts | get-table] {
    get-property itemCount | equals 1 | verify-true
    get-item "context2 \\(p2\\)" | get-property caption | equals "context2 (p2)" | verify-true
}
get-view "Test Explorer" | get-tree | select "p1/scenario1" | double-click
with [get-editor scenario1 | get-section Contexts] {
    click
    get-button "Add..." | click
}
with [get-window "Select context"] {
    get-table | select "context2 \\(p2\\)"
    get-button OK | click
}
get-editor scenario1 | get-section Contexts | key-type "M1+s"
get-view "Test Explorer" | get-tree | select "p2/folder_context_test" | get-menu "Rename..." | click
with [get-window "Rename Resource"] {
    get-editbox -after [get-label "New name:"] | set-text "folder_context_test_new"
    get-button OK | click
}
with [get-editor scenario1 | get-section Contexts | get-table] {
    get-property itemCount | equals 1 | verify-true
    get-item "context2 \\(p2\\)" | get-property caption | equals "context2 (p2)" | verify-true
}
