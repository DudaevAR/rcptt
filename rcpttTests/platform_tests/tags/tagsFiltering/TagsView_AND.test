------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

with [get-view Tags] {
    click
    with [get-editbox] {
       set-text "tag1 and tag2"
    }
}
with [get-window -from "TagsFilterComposite.createFilterControl()" | get-table] {
    get-item "tag1 and tag2" | click
    select "tag1 and tag2" | double-click
    get-item "tag1 and tag2" | click
}
with [get-view Tags | get-table] {
    get-property itemCount | equals 1 | verify-true
    get-item "TC_tag1_tag2" | get-property caption | equals "TC_tag1_tag2" | verify-true
}
get-view Tags | get-editbox | set-text "tag1 & tag2"
with [get-window -from "TagsFilterComposite.createFilterControl()" | get-table] {
    get-item "tag1 & tag2" | click
    select "tag1 & tag2" | double-click
    get-item "tag1 & tag2" | click
}
with [get-view Tags | get-table] {
    get-property itemCount | equals 1 | verify-true
    get-item "TC_tag1_tag2" | get-property caption | equals "TC_tag1_tag2" | verify-true
}
get-view Tags | get-editbox | set-text "tag1 & tag3"
with [get-window -from "TagsFilterComposite.createFilterControl()" | get-table] {
    get-item "tag1 & tag3" | click
    select "tag1 & tag3" | double-click
    get-item "tag1 & tag3" | click
}
get-view Tags | get-table | get-property itemCount | equals 0 | verify-true
