------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "MyProject/TestSuite_tag1" | double-click
get-editor "TestSuite_tag1" | get-section "Test Cases" | get-button "Add with Tag" | click
with [get-window "Select Tag(s) to Add"] {
    with [get-editbox] {
        set-text "tag2 or tag3"
        key-type Enter
    }
    get-button OK | click
}
with [get-editor "TestSuite_tag1" | get-section "Test Cases" | get-table] {
    get-property itemCount | equals 4 | verify-true
    get-item "TC_tag1_tag2 \\(MyProject\\)" | get-property caption | equals "TC_tag1_tag2 (MyProject)" | verify-true
    get-item "TC_tag2 \\(MyProject\\)" | get-property caption | equals "TC_tag2 (MyProject)" | verify-true
    get-item "TC_tag2_tag3 \\(MyProject\\)" | get-property caption | equals "TC_tag2_tag3 (MyProject)" | verify-true
    get-item "TC_tag3 \\(MyProject\\)" | get-property caption | equals "TC_tag3 (MyProject)" | verify-true
}
get-editor "TestSuite_tag1" | get-section "Test Cases" | get-button "Remove All" | click
get-editor "TestSuite_tag1" | get-section "Test Cases" | get-button "Add with Tag" | click

with [get-window "Select Tag(s) to Add"] {
    with [get-editbox] {
        set-text "tag1 | \"tag with spaces\""
        key-type Enter
    }
    get-button OK | click
}
with [get-editor "TestSuite_tag1" | get-section "Test Cases" | get-table] {
    get-property itemCount | equals 5 | verify-true
    get-item "Ctxt_tag1 \\(MyProject\\)" | get-property caption | equals "Ctxt_tag1 (MyProject)" | verify-true
    get-item "TC_tag1 \\(MyProject\\)" | get-property caption | equals "TC_tag1 (MyProject)" | verify-true
    get-item "TC_tag1_tag2 \\(MyProject\\)" | get-property caption | equals "TC_tag1_tag2 (MyProject)" | verify-true
    get-item "TC_tag_with_spaces \\(MyProject\\)" | get-property caption | equals "TC_tag_with_spaces (MyProject)" 
        | verify-true
    get-item "Verification_tag1 \\(MyProject\\)" | get-property caption | equals "Verification_tag1 (MyProject)" 
        | verify-true
}
