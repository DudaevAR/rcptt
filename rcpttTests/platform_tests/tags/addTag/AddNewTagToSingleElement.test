------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Q7 Explorer" | get-tree | select "q7project/test2" | get-menu "Q7/Add Tag..." | click
with [get-window "Select Tag(s) to Add"] {
    get-editbox | set-text NewTag
    get-button OK | click
}
get-view "Q7 Explorer" | get-tree | select "q7project/test2" | double-click
get-editor test2 | get-editbox -after [get-label "Tags:"] | get-property text | equals "t2, t3/t31/t32, t2, NewTag" 
    | verify-true
get-view Tags | click
with [get-view Tags | get-tree] {
    get-item "NewTag \\(1\\)" | get-property caption | equals "NewTag (1)" | verify-true
    get-item "NewTag \\(1\\)" | get-property childCount | equals 1 | verify-true
    get-item "NewTag \\(1\\)/test2" | get-property caption | equals test2 | verify-true
}
get-editor test2 | close
get-view Tags | click
