------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

with [get-view "Q7 Explorer" | get-tree] {
    select "q7project/folder/context" | double-click
    select "q7project/folder/context" | get-menu "Q7/Add Tag..." | click
}
with [get-window "Select Tag(s) to Add"] {
    get-tree | select "Tag3 \\(4 occurrences\\)"
    get-button OK | click
}
get-editor context | get-editbox -after [get-label "Tags:"] | get-property text 
    | equals "Tag1,Tag2,     Tag3/t31/t32/t33, Tag3" | verify-true
get-view Tags | click
with [get-view Tags | get-tree] {
    get-item "Tag3 \\(4\\)" | get-property childCount | equals 3 | verify-true
    get-item "Tag3 \\(4\\)/context" | get-property caption | equals context | verify-true
}
get-editor context | close
get-view Tags | click
