with [get-view "Test Explorer" | get-tree] {
    select "q7project/test2" | double-click
    select "q7project/test2" | get-menu "RCPTT/Add Tag..." | click
}
with [get-window "Select Tag(s) to Add"] {
    get-tree | select "Tag1 \\(2 occurrences\\)"
    get-button OK | click
}
get-editor test2 | get-editbox -after [get-label "Tags:"] | get-property text | equals "Tag2, Tag3/t31/t32, Tag2, Tag1" 
    | verify-true
get-view Tags | click
with [get-view Tags | get-tree] {
    select "Tag1 \\(3\\)" 
    
}
get-view Tags | get-table | get-item "test2"
get-editor test2 | close
get-view Tags | click
