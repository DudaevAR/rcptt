get-view Tags | click -nowait
with [get-view "Q7 Explorer" | get-tree] {
    select "Q7Project/group" "Q7Project/test1" "Q7Project/test2"
    get-menu Delete | click
}
get-window "Delete Resources" | get-button OK | click
with [get-view "Q7 Explorer" | get-tree] {
    get-item Q7Project | get-property caption | equals Q7Project | verify-true
    verify-error { get-item "Q7Project/group" }
    verify-error { get-item "Q7Project/test1" }
    verify-error { get-item "Q7Project/test2" }
}
with [get-view Tags | get-tree] {
    get-item "t1 \\(1\\)" | get-property caption | equals "t1 (1)" | verify-true
    get-item "t1 \\(1\\)" | get-property childCount | equals 1 | verify-true
    get-item "t1 \\(1\\)/context" | get-property caption | equals context | verify-true
    get-item "t2 \\(1\\)" | get-property caption | equals "t2 (1)" | verify-true
    get-item "t2 \\(1\\)" | get-property childCount | equals 1 | verify-true
    get-item "t2 \\(1\\)/context" | get-property caption | equals context | verify-true
    get-item "t3 \\(1\\)" | get-property caption | equals "t3 (1)" | verify-true
    get-item "t3 \\(1\\)" | get-property childCount | equals 1 | verify-true
}
with [get-view Tags | get-tree] {
    get-item "t3 \\(1\\)/t31 \\(1\\)/t32 \\(1\\)/t33 \\(1\\)" | get-property caption | equals "t33 (1)" | verify-true
    get-item "t3 \\(1\\)/t31 \\(1\\)/t32 \\(1\\)/t33 \\(1\\)" | get-property childCount | equals 1 | verify-true
    get-item "t3 \\(1\\)/t31 \\(1\\)/t32 \\(1\\)/t33 \\(1\\)/context" | get-property caption | equals context 
        | verify-true
}
get-view "Q7 Explorer" | get-tree | get-item "Q7Project/context" | get-property caption | equals context | verify-true
