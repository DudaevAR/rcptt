------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-preferences-menu | click
with [get-window Preferences] {
    get-tree | select General
    get-group "Open mode" | get-button "Single click" | click
    get-button Apply | click
    get-button OK | click
}
get-view "Q7 Explorer" | get-tree | get-item "MyProject" | expand
get-view "Q7 Explorer" | get-tree | select "MyProject"
get-view "Q7 Explorer" | get-tree | select "MyProject/BigTestCase" 
get-view "Q7 Explorer" | get-tree | select "MyProject/P with F"
with [get-tab-folder -index 1] {
    get-property pages -index 0 | equals BigTestCase | verify-true
    get-property pages -index 1 | equals "P with F" | verify-true
    get-property activePage | equals "P with F" | verify-true
    get-property tabCount | equals 2 | verify-true
}
