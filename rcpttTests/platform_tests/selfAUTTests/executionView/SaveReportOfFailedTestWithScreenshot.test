------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Test Explorer" | get-tree | select "q7project/simpleTest2" | get-menu "Run As/.* Test Cases" | click
wait 5000
get-view "Execution View" | get-button Report | click
with [get-window -from "Window.createShell()"] {
    get-combo -after [get-label "Format:"] | set-text HTML
    get-editbox -after [get-label "Name:"] | set-text simpleTest2
    get-button "Browse..." | click
    with [get-window -from "Window.createShell()"] {
        get-tree | select q7project
        get-button OK | click
    }
    get-button Finish | click
}
with [get-view "Test Explorer" | get-tree] {
    get-item q7project | get-property caption | equals q7project | verify-true
    get-item q7project | get-property childCount | equals 8 | verify-true
    get-item "q7project/simpleTest2.html" | get-property caption | equals "simpleTest2.html" | verify-true
}
with [get-view "Test Explorer" | get-tree] {
    get-item "q7project/images/_Assertion_of_caption1.png" | get-property caption | equals "_Assertion_of_caption1.png" 
        | verify-true
}
//get-view "Test Explorer" | get-tree | select "q7project/simpleTest2.html" | double-click
get-view "Test Explorer" | get-tree | select "q7project/simpleTest2.html" | select "q7project/simpleTest2.html" 
    | get-menu "Open With/Web Browser" | click
//get-editor ".*simpleTest2.html" | get-control Browser | get-property text | contains "<a href="  | verify-true
get-editor ".*simpleTest2.html" | get-control Browser | get-property text | contains "_Assertion_of_caption1.png"  | verify-true    
get-editor ".*simpleTest2.html" | close
get-view "Test Explorer" | click
