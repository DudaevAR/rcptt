This test verifies the creation report about running a single test-case.

1. Open Q7-project
2. Select test-case and run it
3. Create test report in HTML format
4. Make sure that "simpleTest1.html" file is created in project


------=_.description-216f885c-d591-38ce-8ea2-e4f8cb4d6ffa--
------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

with [get-view "Q7 Explorer" | get-tree] {
    select "q7project/simpleTest1" "q7project/simpleTest2" "q7project/simpleTest3"
}

with [get-view "Q7 Explorer" | get-tree] {
    select "q7project/simpleTest1"
    get-menu "Run As/.* Test Cases" | click
}
wait 10000
get-view "Execution View" | get-label -after [get-label "Runs:"]
	| get-property caption | equals "1/1" | verify-true

get-view "Execution View" | get-button Report | click

with [get-window -from "Window.createShell()"] {
    get-combo -after [get-label "Format:"] | set-text HTML
    get-editbox -after [get-label "Name:"] | set-text simpleTest1
    get-editbox -after [get-label "Location:"] | set-text "/q7project/"
    get-button Finish | click
}
with [get-view "Q7 Explorer" | get-tree] {
    get-item q7project | get-property childCount | equals 7 | verify-true
    get-item "q7project/simpleTest1.html" | get-property caption | equals "simpleTest1.html" | verify-true
}
get-view "Q7 Explorer" | get-tree | select "q7project/simpleTest1.html" | double-click -nowait
