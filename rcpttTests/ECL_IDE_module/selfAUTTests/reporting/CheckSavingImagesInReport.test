------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

with [get-view "Test Explorer" | get-tree] {
    select "q7project/simpleTest1" "q7project/simpleTest2" "q7project/simpleTest3"
}

with [get-view "Test Explorer" | get-tree] {
    select "q7project/simpleTest2" | get-menu "Run As/.* Test Cases" | click
}
wait 10000
get-view "Execution View" | get-button Report | click
with [get-window -from "Window.createShell()"] {
    get-combo -after [get-label "Format:"] | set-text HTML
    get-editbox -after [get-label "Location:"] | set-text "/q7project/"
    get-button Finish | click
}
with [get-view "Test Explorer" | get-tree] {
    get-item "q7project/images" | get-property childCount | equals 1 | verify-true
    get-item "q7project/images/_Assertion_of_caption1.png" | get-property caption | equals "_Assertion_of_caption1.png" 
        | verify-true
}
get-view "Test Explorer" | get-tree | select "q7project/images/_Assertion_of_caption1.png" 
    | get-menu "Open With/Other..." | click
with [get-window "Editor Selection"] {
    get-table | select "Internal Web Browser"
    get-button OK | click
}
get-editor [substitute-variables "${workspace_loc}\\q7project\\images\\_Assertion_of_caption1.png"] | get-combo 
    | get-property selection | contains "/q7project/images/_Assertion_of_caption1.png" | verify-true
