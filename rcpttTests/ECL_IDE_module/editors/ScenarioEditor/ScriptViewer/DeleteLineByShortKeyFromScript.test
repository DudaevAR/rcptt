with [get-editor "P1 is left" | get-section Script | get-text-viewer] {
    set-caret-pos 5 1
    key-type "M1+d"
    key-type "M1+s"
}
get-editor "P1 is left" | get-section Script | get-editbox | get-property text 
    | equals "with [get-view \"Q7 Explorer\" | get-tree] {\n"
    + "    get-item \"P1\"\n"
    + "    \n"
    + "}" | verify-true
with [get-editor "P1 is left" | get-section Script | get-text-viewer] {
    set-caret-pos 1 2
    select-range 1 1 3 1
    key-type "M1+d"
    set-caret-pos 1 8
}
